package com.xworkz.service;

import java.util.HashMap;
import java.util.Map;
import java.util.Random;

import org.springframework.stereotype.Service;

import com.xworkz.dto.VaccineDTO;

@Service
public class VaccineServiceImpl implements VaccineService{
	
	public static Map map=new HashMap<>();

	@Override
	public boolean validateVaccineEmail(VaccineDTO vaccineDTO) {
		boolean flag=false;
		if (!vaccineDTO.getUserEmail().isBlank() && !vaccineDTO.getUserEmail().isEmpty() && vaccineDTO.getUserEmail() != null) {
			flag=true;
			System.out.println("valid mail id");
		} else {
			flag=false;
			System.out.println("please enter crt mail id");
			map.put("mailId", "please enter crt mail id");
			return flag;
		}
		return flag;
	}

	@Override
	public void getRandomNumberString() {
		  // It will generate 6 digit random Number.
	    // from 0 to 999999
	    Random rnd = new Random();
	    int number = rnd.nextInt(999999);

	    // this will convert any number sequence into 6 character.
//	    return String.format("%06d", number);
	    System.out.println(String.format("%06d", number));
	}

}
